<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/d5cc5a87d7e2bb32096f1f5d905ea446"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.adore96.sign_android.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:gravity="center_horizontal"
            android:paddingBottom="30dp"
            android:text="We value Your Images."
            android:textAlignment="center"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/Grey"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textVieResult"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:text="@string/Upload_image"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:fontFamily="sans-serif-medium"/>

            <Spinner android:id="@+id/spinner"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:drawSelectorOnTop="true"
                android:background="@color/colorPrimaryDark" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="300dp"
            android:layout_height="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/uploadTxt"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:gravity="center"
                android:maxLines="15"
                android:scrollbars="vertical"
                android:text="Upload Image"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/predictbtn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:text="Select Image"
                android:textAllCaps="false"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />



        <TextView
            android:id="@+id/predictedtxt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fadeScrollbars="false"
            android:gravity="center"
            android:scrollbars="vertical"
            android:textColor="@android:color/white"
            android:textSize="30dp" />
    </LinearLayout>

</FrameLayout>